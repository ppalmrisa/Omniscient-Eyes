{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"],
      "@/components": ["./components"],
      "@/providers": ["./providers"],
      "@/pages": ["./pages"],
      "@/api": ["./api"],
      "@/app": ["./app"],
      "@/types": ["./types"],
      "@/config": ["./config"],
      "@/utils": ["./utils"],
      "@/features": ["./features"],
      "@/assets": ["./assets"],
      "@/hooks": ["./hooks"],
      "@/styles": ["./styles"],
    },
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
